configuration {
  font: "Hack Nerd Font 12";
  modi: "drun,run,window";
  location: 0;
  show-icons: false;
  case-sensitive: false;
  matching: "fuzzy";
  sort: true;
  cycle: true;
  sidebar-mode: false;
  kb-accept-entry: "Return,KP_Enter";
  kb-row-up: "Up,Control+p";
  kb-row-down: "Down,Control+n";

  timeout {
      action: "kb-cancel";
      delay:  0;
  }
  filebrowser {
      directories-first: true;
      sorting-method:    "name";
  }
}

@theme "./themes/tokyonight.rasi"
